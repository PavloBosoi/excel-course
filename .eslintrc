{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "arrow-parens": "off",
        "comma-dangle": "off",
        "require-jsdoc": "off",
        "indent": ["error", 4],
        "no-trailing-spaces": "off",
        "no-unused-vars": "off",
        "max-len": ["error", { "code": 180 }],
        "no-debugger": "off",
        "operator-linebreak": "off"
    },
    "extends": [
        "eslint:recommended",
        "google"
    ]
}
